<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= todoTitle %> </h1>
    </div>


    <div class="box">
        <% theTask.forEach(function (task) { %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= task._id %>" onchange="this.form.submit()">
                    <input type="hidden" name="listName" value="<%= todoTitle %>"></input>

                <p>
                    <%= task.name %>
                </p>
            </div>
            </form>
            <% }); %>




                <form class="item" action="/" method="post">
                    <input type="text" name="task"  placeholder="Enter Task" autocomplete="off">
                    <button type="submit" name="list" value="<%= todoTitle %>" >+</button>
                </form>
